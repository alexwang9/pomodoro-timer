{
  "manifest_version": 3,
  "name": "Work with Pomodoro",
  "version": "0.0.1",
  "description": "Time your work with a custom Pomodoro timer!",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "action": {
    "default_icon": "/images/icon-48.png",
    "default_popup": "start.html",
    "default_title": "Work with Pomodoro"
  },
  "icons": {
    "48": "/images/icon-48.png",
    "128": "/images/icon-128.png"
  }
}